
.all-bc-item
    .all-bc-item__head
        a(href="javascript:void(0)").all-bc-item__bc-link Бизнес-центр «Лангензипен»

        <!-- если есть награды -->
        .all-bc-item__rewards
            .all-bc-item__reward
                img(src="./img/svg/reward_1.svg", alt="")
                p «Commercial Real Estate St. Petersburg Awards 2009»
            .all-bc-item__reward
                img(src="./img/svg/reward_2.svg", alt="")
                p «100 лучших офисных и торговых центров России 2017»
            .all-bc-item__reward
