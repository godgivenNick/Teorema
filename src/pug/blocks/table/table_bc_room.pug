.table.table__table-bc-room(style="display: none;")

    .table__sort
        .table__sort-select
            select
                option(value="1") цена по возрастанию
                option(value="2") цена по убыванию
                option(value="3") площадь по возрастанию
                option(value="4") площадь по убыванию

    .table-head__full
        .table-head(table-container="1090")
            .table-head__label(bc-room-col="1")
            a(href="javascript:void(0)" bc-room-col="2").table-head__label.table-head__sort-square.active 
                span Площадь
            a(href="javascript:void(0)" bc-room-col="3").table-head__label.table-head__sort-price 
                span Стоимость
            .table-head__label(bc-room-col="4") Ставка
            .table-head__label(bc-room-col="5").table-head__compare
                div Сравнение <span>3</span>
            .table-head__label(bc-room-col="6").table-head__order
                div Заявка <span>3</span>
    .table-body
        include table_order.pug
        include table_compare.pug

        .table-body__list
            include table_bc_room_item.pug

        .table-body__ctrls
            button.table-body__ctrl-btn Показать еще
            button.table-body__ctrl-btn Скрыть